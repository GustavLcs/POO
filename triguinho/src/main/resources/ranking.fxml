<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/javafx" fx:controller="com.triguinho.controller.RankingController">
    <VBox spacing="10">
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <TableView fx:id="tableView">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Apostador" />
                    <TableColumn fx:id="betColumn" text="Jogos ganhos" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            <placeholder>
                <VBox alignment="CENTER">
                    <Label text="Continue jogando..."/>
                </VBox>
            </placeholder>
            </TableView>
        </ScrollPane>
    </VBox>
</StackPane>